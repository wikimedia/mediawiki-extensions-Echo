{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"env": {
		"commonjs": true
	},
	"rules": {
		"max-len": "off",
		"mediawiki/no-unlabeled-buttonwidget": "warn"
	},
	"overrides": [
		{
			"files": [
				"**/*.js"
			],
			"rules": {
				"comma-dangle": [
					"error",
					"always-multiline"
				]
			}
		}
	]
}
