<?xml version="1.0"?>
<ruleset name="MediaWiki">
	<file>.</file>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="MediaWiki.Commenting.CommentBeforeClass.SpacingAfter" />
	</rule>
	<rule ref="MediaWiki.Files.ClassMatchesFilename.NotMatch">
		<exclude-pattern>scripts/gen-autoload\.php</exclude-pattern>
	</rule>
	<rule ref="MediaWiki.Arrays.TrailingComma">
		<properties>
			<property name="singleLine" value="false" />
			<property name="multiLine" value="true" />
		</properties>
	</rule>
	<arg name="encoding" value="UTF-8" />
	<arg name="extensions" value="php" />
	<arg name="colors" />
</ruleset>
